<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/ColorWhite</item>

        <item name="android:statusBarColor" >@color/ColorBlack</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
        <item name="android:itemTextAppearance"> @style/CustomTextMenu</item >
    </style>


    <style name="Theme.NoteAppDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/ColorWhite</item>
        <item name="android:statusBarColor" >@color/ColorBlack</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
        <item name="android:itemTextAppearance" > @style/CustomTextMenu</item >

    </style>
    <style name="CustomToolbarStyle">
        <item name="android:textColorPrimary">@color/ColorWhite</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/brandon_grotesque_bold_italic_58a8a48221563</item>
        <item name="android:textStyle">bold</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColorSecondary">@color/ColorWhite</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name = "CustomTextMenu" parent ="@android:style/TextAppearance.Widget.IconMenu.Item" >
    <item name = "android:textColor">@color/black</item>
    </style >
</resources>